<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newbee.kristian.KOS"
    android:versionCode="4"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="DATABASE"
        android:value="kaleyos.db" />
    <meta-data
        android:name="VERSION"
        android:value="4" />
    <meta-data
        android:name="QUERY_LOG"
        android:value="true" />
    <meta-data
        android:name="DOMAIN_PACKAGE_NAME"
        android:value="com.newbee.kristian.KOS" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Kaleyostyle" >
        <activity
            android:name="com.newbee.kristian.KOS.SplashActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.ParentActivity"
            android:label="@string/title_activity_parent"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.TableActivity"
            android:label="@string/title_activity_table"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.fragments.FragmentTableActivity"
            android:label="@string/title_activity_fragment"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.CustomActivity"
            android:label="@string/title_activity_custom"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.MenuActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Kaleyostyle2"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.MenuDetailActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.OrderActivity"
            android:label="@string/title_activity_order"
            android:theme="@style/Theme.Kaleyostyle2"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.MoveOrLinkTableActivity"
            android:label="@string/title_activity_move_or_link_table"
            android:theme="@style/Theme.Kaleyostyle2" >
        </activity>
        <activity
            android:name="com.newbee.kristian.KOS.SoldOutActivity"
            android:label="@string/title_activity_sold_out"
            android:theme="@style/Theme.Kaleyostyle2" >
        </activity>
    </application>

</manifest>
