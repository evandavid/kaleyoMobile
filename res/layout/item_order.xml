	            android:layout_marginRight="5dp"
	            android:background="@color/yellow"
	            android:padding="3dp"
	            android:text="TextView"
	            android:textSize="10sp" />
	       
	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:background="@color/yellow"
	            android:padding="3dp"
	            android:text="TextView"
	            android:textSize="10sp" />
	        
